# Content Orchestrator v2.0 - Environment Variables
# Copy this file to .env and configure for your environment

# Server Configuration
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=info
RELOAD=false

# CORS Configuration
# Comma-separated list of allowed origins, or "*" for all
ALLOWED_ORIGINS=*

# Mock API Client Configuration
# Set delays in milliseconds to simulate real API latency
USE_MOCK_CLIENTS=true
TEXT_API_DELAY_MS=100
CHART_API_DELAY_MS=150
IMAGE_API_DELAY_MS=200
DIAGRAM_API_DELAY_MS=150

# ============================================
# Real API Client Configuration (Production)
# ============================================

# Text & Table Builder v1.0 (Railway Production)
TEXT_SERVICE_URL=https://web-production-e3796.up.railway.app
TEXT_SERVICE_TIMEOUT=30

# Image Builder v2.0 (Railway Production)
IMAGE_SERVICE_URL=https://web-production-1b5df.up.railway.app
IMAGE_SERVICE_TIMEOUT=20

# Diagram Generator v3.0 (Railway Production)
DIAGRAM_SERVICE_URL=https://web-production-e0ad0.up.railway.app
DIAGRAM_SERVICE_TIMEOUT=60
DIAGRAM_POLL_INTERVAL=2

# Analytics Microservice v3 (Railway Production)
CHART_SERVICE_URL=https://analytics-v30-production.up.railway.app
CHART_SERVICE_TIMEOUT=60
CHART_POLL_INTERVAL=2

# Optional API Keys (uncomment if services require authentication)
# TEXT_API_KEY=your_api_key_here
# CHART_API_KEY=your_api_key_here
# IMAGE_API_KEY=your_api_key_here
# DIAGRAM_API_KEY=your_api_key_here

# Monitoring and Logging
# SENTRY_DSN=your_sentry_dsn_here
# LOG_FORMAT=json
